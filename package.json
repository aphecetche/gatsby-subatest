{
  "private": true,
  "name": "gastby-subatest",
  "version": "0.0.1",
  "workspaces": [
    "themes/**",
    "site"
  ],
  "husky": {
    "hooks-disabled": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn run prettier --write",
      "yarn run eslint --fix"
    ],
    "*.{html,json}": [
      "yarn run prettier --write"
    ],
    "*.{yaml,yml}": [
      "yarn run prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "lint-disabled": "yarn run prettier \"**/*.{js,jsx,json,yaml,yml}\" --write",
    "start": "yarn workspace site develop",
    "build": "yarn workspace site build"
  }
}
